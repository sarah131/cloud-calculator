const d = document.getElementById('d');

document.querySelector('.keys').addEventListener('click', e => {
  if (!e.target.matches('button')) return;
  const v = e.target.dataset.v;

  if (v === 'C') {
    d.value = '';
    return;
  }

  if (v === '=') {
    try {
      d.value = eval(d.value) || '';
    } catch {
      d.value = 'Error';
    }
    return;
  }

  d.value += v;
});
